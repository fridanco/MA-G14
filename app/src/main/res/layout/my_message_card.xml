<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_message_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#EAEAEA"
    android:foregroundTint="#E6E6E6"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="12dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="6dp"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        app:contentPadding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/cardColor"
                    android:layout_width="6dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="6dp"
                    android:background="#6E14D3"
                    android:orientation="vertical"></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingRight="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/timeslot_advertisment_title_list"
                                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                                android:textColor="?android:textColorPrimary" />

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingBottom="6dp"
                                android:text="@string/timeslot_service_description_list"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:id="@+id/divider5"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?android:attr/listDivider"
                        android:backgroundTint="#00FFFFFF" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp"
                            android:drawablePadding="2dp"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp"
                            android:text="@string/timeslot_date_list"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            android:textSize="16sp"
                            app:drawableLeftCompat="@drawable/ic_baseline_calendar_today_24" />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="2dp"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp"
                            android:text="@string/timeslot_from_to_list"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            android:textSize="16sp"
                            app:drawableLeftCompat="@drawable/ic_baseline_access_time_24" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/messageContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:orientation="vertical"></LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>

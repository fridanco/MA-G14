<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.MyAdsLinkedFragment">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/adsTabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabFollowedAds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ads followed" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabReceivedAds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ads received" />

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/adsViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>